\usepackage{fancyhdr}
\pagestyle{fancy}

% --- Remove "Chapter X" from the chapter mark; keep only the title ---
\makeatletter
\renewcommand{\chaptermark}[1]{\markboth{#1}{}}
\makeatother

% --- Clear defaults ---
\fancyhf{}

% --- Odd pages (right-hand pages) ---
% Header: right, italic: "Book Name <page>"
\fancyhead[RO]{\itshape Academus Philosophy Journal\quad\thepage}
% Footer: right, italic: "iss. 1 2025"
\fancyfoot[RO]{\itshape iss. 2\quad 2025}

% --- Even pages (left-hand pages) ---
% Header: left, italic: "<page> <chapter title>"
\fancyhead[LE]{\itshape \thepage\ \quad\nouppercase{\leftmark}}
% Footer: left, italic: "iss. 1 2025"
\fancyfoot[LE]{\itshape iss. 2 \quad2025}

% Optional: rules
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}

% --- Ensure chapter opening pages (which use 'plain' style by default)
%     also use the same fancy layout ---
\fancypagestyle{plain}{%
  \fancyhf{}
  \fancyhead[RO]{\itshape Academus Philosophy Journal\quad\thepage}
  \fancyhead[LE]{\itshape \thepage\ \quad \nouppercase{\leftmark}}
  \fancyfoot[RO]{\itshape iss. 1 \quad2025}
  \fancyfoot[LE]{\itshape iss. 1 \quad2025}
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}
}

